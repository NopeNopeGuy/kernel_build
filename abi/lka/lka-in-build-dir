#!/bin/bash

CMD=$(basename $0)

main()
{
	if [ ! -f vmlinux.o -o \
	     ! -d drivers -o ! -d fs -o ! -d fs -o ! -d net -o \
	     ! -d source/drivers -o ! -d source/fs -o \
	     ! -d source/fs -o ! -d source/net ] ; then
		echo "$CMD: current directory not in a Linux build directory" 1>&2
		exit 1
	fi
	exit 0
}

main "$@"
