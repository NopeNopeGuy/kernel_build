# Make sure vendor list doesn't list any protected symbols
protected_symbols=$(mktemp)
vendor_symbols=$(mktemp)
sed '1d' "${ROOT_DIR}/${KERNEL_DIR}/android/abi_gki_modules_protected" > $protected_symbols
cat "${ROOT_DIR}/${KERNEL_DIR}/android/abi_gki_aarch64_"* | sort -u > $vendor_symbols

violation=$(awk 'NR==FNR { lines[$0]=1; next } $0 in lines' $protected_symbols $vendor_symbols)
if [ -n "$violation" ]; then
  echo "ERROR: protected symbols are present in vendor symbol lists" >&2
  echo "List of protected symbols in vendor symbols lists:" >&2
  echo "$violation" >&2
  exit 1
fi

rm $protected_symbols
rm $vendor_symbols
