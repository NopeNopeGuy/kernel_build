if [ "$#" -ne 2 ]; then
	echo "ERROR: illegal number of parameters" >&2
	echo "Usage: compare_wl <path/to/build/output> <path/to/whitelist>" >&2
	exit 1
fi

ksymtab=$(mktemp)
whitelist=$(mktemp)

# Extract ksymtab from vmlinux + in-tree modules
readelf -sW "$1/vmlinux" $(find "$1" -name "*.ko") | \
	sed -n -e 's/^.*__ksymtab_//p' | sort -u > $ksymtab
# Sort the flattened whitelist to ensure it is comparable
sort -u "$2" > $whitelist

delta=$(diff $ksymtab $whitelist | grep -v ' ')
rm $ksymtab $whitelist
if [ -n "$delta" ]; then
	echo "ERROR: Differences between ksymtab and whitelist detected!" >&2
	echo "Symbols missing from ksymtab:" >&2
	echo "$delta" | sed -n -e 's/^+/ - /p' >&2
	echo "Symbols missing from whitelist:" >&2
	echo "$delta" | sed -n -e 's/^-/ - /p' >&2
	exit 1
fi
